.goods-wrap{
  margin-bottom: 120rpx;
}
.swiper-wrap {
  display: flex;
  justify-content: center;
}

.swiper-wrap swiper {
  width: 400rpx;
  height: 400rpx;
  text-align: center;
}

.swiper-wrap swiper image {
  width: 100%;
  height: 100%;
}

.price {
  color: var(--themeColor);
  font-weight: 600;
  font-size: 32rpx;
  letter-spacing: 4rpx;
}

.desc {
  display: flex;
  margin: 20rpx auto;
}

.desc .goods-name {
  flex: 6;
  padding-left: 10rpx;
  padding-right: 20rpx;
  border-right: 2rpx solid #000;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.desc .share-wrap {
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nodes {
  color: var(--themeColor);
  font-weight: bold;
  font-size: 36rpx;
  margin: 20rpx auto;
}

.bottom-bar {
  display: flex;
  width: 100%;
  height: 90rpx;
  border-top: 1rpx solid #ccc;
  background-color: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.bottom-bar .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.bottom-bar .tool_item:nth-child(-n+3){
  position: relative;
}
.bottom-bar .tool_item button{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.bottom-bar .tool_item.btn_cart,
.bottom-bar .tool_item.btn_buy{
  flex: 2;
  flex-direction: row;
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
  line-height: 90rpx;
}

.bottom-bar .tool_item.btn_cart {
  background-color: #ffa500;
}

.bottom-bar .tool_item.btn_buy {
  background-color: #eb4450;
}